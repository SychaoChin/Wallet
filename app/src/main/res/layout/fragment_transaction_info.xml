<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactionInfoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:theme="@style/Theme.MaterialComponents.Light.Bridge"
    tools:context=".TransactionInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="250dp"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/transaction_info_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/download"
            app:shapeAppearanceOverlay="@style/RoundCornerImage"
            tools:ignore="ImageContrastCheck" />
        <TextView
            android:id="@+id/transaction_name_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="35sp"
            android:hint="@string/name" />
        <TextView
            android:id="@+id/transaction_money_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF9800"
            android:textColorHint="#FF9800"
            android:textSize="35sp"
            android:hint="@string/money" />
    </LinearLayout>


</FrameLayout>